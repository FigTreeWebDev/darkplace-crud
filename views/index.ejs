<!DOCTYPE html>
<html lang="en-US">
<head>
  <meta charset="utf-8" />
  <title>Garth Marenghi's Darkplace Quote App</title>
  <link rel="stylesheet" href="/styles.css" />
</head>

<body>
  <h1 data-position="header">Garth Marenghi's Darkplace Quote App</h1>

    <section data-position="add-quote">
      <h2>Add quote</h2>
      <form action="/quotes" method="POST">
        <input type="text" placeholder="name" name="name" />
        <input type="text" placeholder="quote" name="quote" />
        <button type="submit">Submit</button>
      </form>
    </section>

    <section data-position="update-quote">
      <div>
        <h2>Dean interjects!</h2>
        <p>
          Replace the first Liz quote with a quote by Dean.
        </p>
        <button id="update-button">Replace Liz's quote</button>
      </div>
    </section>

    <section data-position="delete-quote">
      <div>
        <h2>Silence Dean!</h2>
        <p>
          Delete one Dean quote. (Does nothing if there are no more
          Dean quotes!)
        </p>
        <button id="delete-button">Delete Dean's quote</button>
      </div>
      <div id="message"></div>
    </section>

    <section data-position="quotes">
      <h2>Quotes</h2>

      <ul class="quotes">
        <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote">
          <span><%= quotes[i].name %></span>:
          <span><%= quotes[i].quote %></span>
        </li>
        <% } %>
      </ul>
    </section>

    <script src="/main.js"></script>
  </body>
</html>